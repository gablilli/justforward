set daemon 60
set no syslog
set no bouncemail
set invisible
set logfile /var/log/fetchmail.log

poll "${PROVIDERHOST}"
  protocol POP3
  port "${PROVIDER_PORT}"
  ssl
  user "${PROVIDER_USER}"
  password "${PROVIDER_PASS}"
  fetchall
  keep
  mda "/usr/bin/msmtp --read-envelope-from --read-recipients -t"
